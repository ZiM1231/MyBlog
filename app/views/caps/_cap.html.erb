<article class="cap">
  <section class="cap-head">
    <small>

      <% if user_signed_in? && current_user.admin? %>
        <%= link_to 'Змінити', edit_admin_cap_path(cap) %>
        |
        <%= link_to 'Видалити', admin_cap_path(cap), method: :delete, data: { confirm: 'Ви впевнені?' } %>
      <% end %>
    </small>
  </section>



  <section class="cap-body clearfix">
    <%= image_tag cap.image.url(:large), class: 'img-thumbnail thumb' if cap.image? %>
    <%= cap.body.html_safe %>
  </section>




</article>
