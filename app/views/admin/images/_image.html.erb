<%= form_for [:admin, @image], html: { multipart: true } do |f| %>

  <div class="form-group">
    <%= f.label :image_title %>
    <%= f.text_field :image_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image_description %>
    <%= f.text_area :image_description, class: 'form-control' %>
  </div>

  <div class="form-group">

    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.submit 'Змінити', action: @image.new_record? ? t('common.create') : t('common.edit'), class: 'btn btn-primary' %>
    <%= link_to t('common.back'), :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
