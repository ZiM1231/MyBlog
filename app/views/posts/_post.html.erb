<article class="post">
  <section class="post-head">
    <h2><%= link_to post.title, post_path(post) %></h2>

    <section class="footer-summary">
      <%= raw post.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'tag tag-primary' }.join(", ") %>
    </section>

    <small>
      <time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time>
      <% if post.category.present? %>
        |
        <%= link_to post.category.name, post.category %>
      <% end %>
      <% if user_signed_in? && current_user.admin? %>
        |
        <%= link_to 'Змінити', edit_admin_post_path(post) %>
        |
        <%= link_to 'Видалити', admin_post_path(post), method: :delete, data: { confirm: 'Ви впевнені?' } %>
      <% end %>
    </small>
  </section>



  <section class="post-summary clearfix">
    <%= image_tag post.image.url(:large), class: 'img-thumbnail thumb' if post.image? %>
    <%= post.summary %>
  <h2><%= link_to 'Продовжити',post_path(post), class: 'btn btn-outline-primary btn-sm' %></h2>

  </section>
</article>
